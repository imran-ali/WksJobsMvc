@model WksJobsMvc.Models.Vessel

@{
    ViewData["Title"] = "Edit vessel";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="VesselCode" class="control-label"></label>
                        <input asp-for="VesselCode" class="form-control" />
                        <span asp-validation-for="VesselCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="VesselType" class="control-label"></label>
                        <input asp-for="VesselType" class="form-control" />
                        <span asp-validation-for="VesselType" class="text-danger"></span>
                    </div>
                </div>

            </div>
            
            
            <div class="row">
                
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="VesselName" class="control-label"></label>
                        <input asp-for="VesselName" class="form-control" />
                        <span asp-validation-for="VesselName" class="text-danger"></span>
                    </div>
                </div>

            </div>
            
           
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
