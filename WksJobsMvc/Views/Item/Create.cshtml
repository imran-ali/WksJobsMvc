@model WksJobsMvc.Models.Item

@{
    ViewData["Title"] = "Create Item";
}

<h4>@ViewData["Title"]</h4>
@if (@ViewData["itempricezeroerrormessage"]!=null)
{
    <div class="alert alert-danger" role="alert">@ViewData["itempricezeroerrormessage"]</div>
}

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">

                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="ItemCode" class="control-label"></label>
                        <input asp-for="ItemCode" class="form-control" />
                        <span asp-validation-for="ItemCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="UnitOfMeasurement" class="control-label"></label>
                        <input asp-for="UnitOfMeasurement" class="form-control" />
                        <span asp-validation-for="UnitOfMeasurement" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="PerUnitCost" class="control-label"></label>
                        <input asp-for="PerUnitCost" class="form-control" />
                        <span asp-validation-for="PerUnitCost" class="text-danger"></span>
                    </div>
                </div>

            </div>

            
            <div class="form-group mt-3">
                <label asp-for="MaterialDescription" class="control-label"></label>
                <input asp-for="MaterialDescription" class="form-control" />
                <span asp-validation-for="MaterialDescription" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
